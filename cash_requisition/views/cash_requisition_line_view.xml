<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- Cash Requisition line Tree View  -->

        <record model="ir.ui.view" id="cash_requisition_line_tree_view">
        <field name="name">Cash Requisition List view</field>
        <field name="model">cash.requisition.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
           <tree string="Cash Requisition Line">
               <field name="name"/>
               <field name="requisition_by"/>
              <field name="state"/>
           </tree>
        </field>
    </record>

        <!-- Cash Requisition Line Form View -->

        <record id="cash_requisition_line_form_view" model="ir.ui.view">
            <field name="name">Cas Requisition Line Form view</field>
            <field name="model">cash.requisition.line</field>
            <field name="arch" type="xml">
                <form string="Cash Requisition Line">
                   <header>
                       <button name="action_submit" type="object" states="draft"
                            string="Submit" class="oe_highlight"/>
                       <field name="state" widget="statusbar"/>
                   </header>
                  <sheet>
                      <group>
                          <group>
                              <field name="name" attrs="{'readonly': [('state','not in',('draft'))]}"/>
                              <field name="requisition_by" attrs="{'readonly': [('state','not in',('draft'))]}"/>
                              <field name="amount" attrs="{'readonly': [('state','not in',('draft'))]}"/>
                          </group>
                          <group>

                          </group>
                      </group>
                      <group>
                          <field name="note" attrs="{'readonly': [('state','not in',('draft'))]}"/>
                      </group>
                  </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Cash Requisition Line Action -->

        <record model="ir.actions.act_window" id="act_cash_requisition_line_view">
            <field name="name">Daily Cash Requisition</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cash.requisition.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to Create a New Record.
                </p>
            </field>
        </record>

        <!-- Cash Requisition Line Menu -->

        <menuitem
            action="act_cash_requisition_line_view"
            id="menu_act_cash_requisition_line_view"
            parent="cash_requisition_view"
            sequence="2"
            groups="gbs_application_group.group_dept_manager,yuko_employee_iou.group_management,yuko_employee_iou.group_account_adviser"/>


	</data>
</odoo>