<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- Definition of the report -->
		<report id="report_yuko_tds"
				model="hr.payslip"
				string="TDS Challan Form"
				name="yuko_tds_challan_report.report_yuko_tds_qweb"
				file="yuko_tds_challan_report.report_yuko_tds_qweb"
				report_type="qweb-pdf"
                menu="False"
                paperformat="report_layout.paperformat_backend_landscape"
        />

		<!-- Main template -->
		<template id="report_yuko_tds_qweb">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
				<t t-call="yuko_report_layout.internal_layout">
					<div class="page">
                        <div class="row">
                            <style type="text/css">
                                .report-title { text-align:center; }
                                .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                            </style>
                            <div class="clearfix">
                                <h4 class="report-title" style="font-size: 25px">চালান ফরম </h4>
                            </div>

                            <div class="row mb32" >
                                <div class="col-xs-4 text-center">
                                    <strong></strong>
                                </div>
                                <div class="col-xs-4 text-center" style="font-size: 21px">
