<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>F

     <record id="inherit_hr_holiday_allowance_form" model="ir.ui.view">
            <field name="name">hr.holiday.allowance.form</field>
            <field name="model">hr.holiday.allowance</field>
            <field name="inherit_id" ref="hr_holiday_allowance.hr_holiday_allowance_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_approve']" position="replace">
                    <button string="Approve" name="action_approve" type="object" class="oe_highlight"
								attrs="{'invisible': [('state', '!=', 'confirmed')]}" confirm="Are you sure you want to Approve this?"
                                groups="gbs_hr_security.group_payroll_manager"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>