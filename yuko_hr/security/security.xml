<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="rule_hr_payslip" model="ir.rule">
            <field name="name">General Employee</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="domain_force">['|',('employee_id.user_id','=',user.id),('employee_id','child_of',[e.id for e in user.employee_ids])]</field>
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_unlink" eval="True" />
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>

        <record id="group_hr_recruitment_head" model="res.groups">
            <field name="name">Head of Department</field>
            <field name="category_id" ref="base.module_category_hr_recruitment"/>
        </record>

    </data>
</odoo>
