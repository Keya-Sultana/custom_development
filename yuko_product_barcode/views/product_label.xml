<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <template id="basic_layout">
            <t t-call="report.html_container">
                <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                    <t t-raw="0"/>
                </div>
            </t>
        </template>

        <template id="report_simple_barcode">
            <div style="width: 32%; display: inline-table; height: 5rem;">
                    <table>
                        <tr>
                            <td class="text-center align-middle" style="height: 3rem;">
                                <t t-if="product.barcode">
                                    <span t-field="product.default_code"/>
                                    <img alt="Barcode" t-if="len(product.barcode) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', product.barcode, 600, 150)" style="width:100%;height:3rem;"/>
                                    <img alt="Barcode" t-elif="len(product.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', product.barcode, 600, 150)" style="width:100%;height:3rem;"/>
                                    <img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', product.barcode, 600, 150)" style="width:100%;height:3rem"/>
                                    <span t-field="product.barcode"/>
                                </t>
                                <t t-else=""><span class="text-muted">No barcode available</span></t>
                            </td>
                        </tr>
                    </table>
                </div>
        </template>

        <template id="report_producttemplatebarcode">
            <t t-call="yuko_product_barcode.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="template">
                        <t t-foreach="template.product_variant_ids" t-as="product">
                            <t t-call="yuko_product_barcode.report_simple_barcode">
                                <t t-set="product" t-value="product"/>
                            </t>
                        </t>
                    </t>
                </div>
            </t>
        </template>

        <report
            id="report_product_template_barcode"
            string="Product Barcode (PDF)"
            model="product.template"
            report_type="qweb-pdf"
            name="yuko_product_barcode.report_producttemplatebarcode"
            file="yuko_product_barcode.report_producttemplatebarcode"
            paperformat="yuko_product_barcode.paperformat_barcode_landscape"
        />

    </data>
</odoo>
