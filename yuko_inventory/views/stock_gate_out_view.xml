<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <menuitem name="Stock Gate Out" id="stock_gate_out.stock_gate_out_menu" parent="stock.menu_stock_root"
                 groups="stock.group_stock_user,stock.group_stock_manager,yuko_inventory.group_yuko_admin_user,yuko_inventory.group_yuko_admin_manager,yuko_inventory.group_yuko_security"/>
        <menuitem name="Gate Out" id="stock_gate_out.stock_gate_out_sub_menu" parent="stock_gate_out.stock_gate_out_menu" sequence="5"
                  action="stock_gate_out.stock_gate_out_action_window"
                  groups="stock.group_stock_user,stock.group_stock_manager,yuko_inventory.group_yuko_admin_user,yuko_inventory.group_yuko_admin_manager,yuko_inventory.group_yuko_security"/>

        <record id="inherit_stock_gate_out_list_view" model="ir.ui.view">
            <field name="name">stock.gate.out.tree.view</field>
            <field name="model">stock.gate.out</field>
            <field name="inherit_id" ref="stock_gate_out.stock_gate_out_list_view"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Stock Get Out Form" decoration-info="state == 'draft'" colors="purple:state == 'approval';brown:state == 'check';green:state == 'done';" edit="false">
                        <field name="name"/>
                        <field name="issue_id"/>
                        <field name="inventory_outno"/>
                        <field name="date"/>
                        <field name="state"/>
                    </tree>
                </xpath>
            </field>
        </record>

        <record id="inherit_stock_gate_out_form_view" model="ir.ui.view">
            <field name="name">stock.gate.out.form.view1</field>
            <field name="model">stock.gate.out</field>
            <field name="inherit_id" ref="stock_gate_out.stock_gate_out_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="replace">
                    <header>
                        <button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight" groups="stock.group_stock_user,yuko_inventory.group_yuko_admin_user"/>
                        <button string="Approved" name="action_approval" states="approval" type="object" class="oe_highlight" groups="yuko_inventory.group_yuko_admin_manager"/>
                        <button string="checked" name="action_check" states="check" type="object" class="oe_highlight" groups="yuko_inventory.group_yuko_security"/>
                        <button name="action_reject" string="Reject" states="approval" type="object" groups="yuko_inventory.group_yuko_admin_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approval,check,done"/>
                    </header>
                </xpath>
                <xpath expr="//sheet/group[1]" position="replace">
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_get_stock_picking"
                                    string="Stock Operation" type="object"
                                    icon="fa-cogs"
                                    groups="stock.group_stock_user"/>
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="depart_id"/>
                            <field name="receive_type"/>
                            <field name="inventory_outno" attrs="{'required': [('receive_type', '=', 'inventory')]}"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="reference_out"/>
                            <field name="issue_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="partner_id" domain="[('customer','=',True)]" options="{'no_open': True, 'no_create': True}"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//notebook/page[1]" position="before">
                    <page string="Products">
                        <field name="out_line_ids">
                            <tree string="Product Lines" editable="bottom">
                                <field name="product_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="name"/>
                                <field name="product_qty"/>
                                <field name="product_uom"/>
                                <field name="remark"/>
                            </tree>
                        </field>
                        <separator string="Gate Pass Note"/>
                        <field name="gate_out_note"/>
                    </page>
                </xpath>
                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
