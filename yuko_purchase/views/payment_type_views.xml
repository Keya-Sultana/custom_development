<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_type_form_view" model="ir.ui.view">
        <field name="name">payment.type.form</field>
        <field name="model">payment.type</field>
        <field name="arch" type="xml">
            <form string="Payment type">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>
    <record id="payment_type_form_action" model="ir.actions.act_window">
        <field name="name">Payment Method</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.type</field>
        <field name="context">{}</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_payment_type_form_action" parent="purchase.menu_purchase_config"
            sequence="2" action="payment_type_form_action" groups="base.group_system"/>
</odoo>