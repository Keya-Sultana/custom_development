<?xml version="1.0"?>
<odoo>
	<data>
		<record id="inherit_hr_ot_requisition_form" model="ir.ui.view">
			<field name="name">hr_ot_requisition_form</field>
			<field name="model">hr.ot.requisition</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="hr_overtime_requisition.hr_ot_requisition_form" />
			<field name="arch" type="xml">
				<button name="action_approve" position="replace">
					<button string="Approve" name="btn_action_approve" type="object" class="oe_highlight"
								attrs="{'invisible': ['|',('current_user_is_approver', '!=', True),('state', '!=', 'to_approve')]}"/>
				</button>
				<button name="action_validate" position="replace">
					<button string="Validate" name="action_validate" states="to_approve" class="oe_highlight" type="object"
								groups="hr.group_hr_manager"/>
				</button>
				<xpath expr="//group/group/field[@name='pending_approver']" position="replace">
                    <field name="pending_approver"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>