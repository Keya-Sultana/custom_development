<?xml version="1.0"?>
<odoo>
	<data>
		<record id="inherit_edit_holiday_new1" model="ir.ui.view">
			<field name="name">Short Leave Request</field>
            <field name="model">hr.short.leave</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="hr_short_leave.edit_holiday_new1" />
			<field name="arch" type="xml">
				<button name="action_approve" position="replace">
					<button string="Approve" name="btn_action_approve" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|',('current_user_is_approver', '!=', True),('state', '!=', 'confirm')]}"/>
				</button>
				<button name="action_draft" position="replace">
					<button string="Reset to Draft" name="action_draft" type="object"
                                attrs="{'invisible': ['|', ('can_reset', '=', False), ('state', 'not in', ['confirm'])]}"/>
				</button>
				<button name="action_validate" position="replace">
					<button string="Validate" name="action_validate" states="confirm" class="oe_highlight" type="object"
							groups="hr_holidays.group_hr_holidays_manager,hr.group_hr_manager"/>
				</button>
				<xpath expr="//group/group/field[@name='pending_approver']" position="replace">
                    <field name="pending_approver"/>
                </xpath>
				<xpath expr="//group/group/field[@name='name']" position="replace">
                    <field name="name" attrs="{'readonly':[('state','!=','draft')]}"/>
                </xpath>
				<xpath expr="//group/group/label[@for='number_of_days_temp']" position="replace">
                    <label for="number_of_days_temp" attrs="{'readonly':[('state','!=','draft')]}"  string="Duration"/>
                </xpath>
				<xpath expr="//group/group/div/div[1]" position="replace">
                    <div>
						<field name="date_from" attrs="{'readonly':[('state','!=','draft')]}" class="oe_inline"/>
						<label string="-" class="oe_inline"/>
						<field name="date_to"  attrs="{'readonly':[('state','!=','draft')]}" class="oe_inline"/>
					</div>
                </xpath>
				<xpath expr="//group/group/field[@name='employee_id']" position="replace">
                    <field name="employee_id" attrs="{'readonly':[('state','!=','draft')]}"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>