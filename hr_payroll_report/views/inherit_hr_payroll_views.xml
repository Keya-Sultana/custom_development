<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="inherit_view_hr_payslip_form" model="ir.ui.view">
            <field name="name">hr.payslip.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='line_ids']//field[@name='amount']" position="replace"></xpath>
            </field>
        </record>

        <!-- Invisible menu for Payment Advice -->

        <record id="make_invisible_payment_advice" model="res.groups">
			<field name="name">Invisible menu for Payment Advice</field>
		</record>

        <record id="l10n_in_hr_payroll.hr_menu_payment_advice" model="ir.ui.menu">
			<field name="groups_id" eval="[(6,0,[ref('hr_payroll_report.make_invisible_payment_advice')])]" />
		</record>

    </data>
</openerp>